
@model IEnumerable<WebShop.Models.MonthlyInstallments.MonthlyInstallment>

@{
      Layout = "~/Views/Shared/_Sidebar.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    @* <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1"> *@
    <title>View Installments</title>
    <!-- Favicon icon -->
    @* <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" /> *@
    <!-- Custom Stylesheet -->
    <link href="~/Theme/plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Theme/css/style.css" rel="stylesheet">

</head>

<body>

  

    
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">


        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="row page-titles mx-0">
                <div class="col p-md-0">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Installmet</a></li>
                    </ol>
                </div>
            </div>
            
            <!-- row -->

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Remaining Monthly Installment</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Customer</th>
                                                <th>Mobile</th>
                                                <th>Price</th>
                                                <th>Remaining Amount</th>
                                                <th>Paid Amount</th>
                                                <th>Installment</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                              @foreach (var item in Model)
                                              {
                                                <tr>
                                                <td><h4>@Html.DisplayFor(modelItem => item.ProductName)</h4></td>
                                                <td class="text-dark">@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                                <td class="text-dark">@Html.DisplayFor(modelItem => item.MobilleNo)</td>
                                                <td><h3><span class="badge pt-2 badge-info px-2">@Html.DisplayFor(modelItem => item.TotalAmount)</span></h3></td>
                                                <td><h3><span class="badge pt-2 badge-danger px-2">@Html.DisplayFor(modelItem => item.RemainingAmount)</span></h3></td>
                                                <td><h3><span class="badge pt-2 badge-success px-2">@Html.DisplayFor(modelItem => item.TotalPaidAmount)</span></h3></td>
                                                <td><h3><span class="badge pt-2 badge-dark px-2">@Html.DisplayFor(modelItem => item.Installment)</span></h3></td>
                                                <td><span >@Html.ActionLink("Pay", "PayInstallment", "MonthlyInstallment",  new { saleId = item.SaleId} , new {@class = " btn btn pt-2 btn-outline-info" } )</span>
                                                 <span class="ml-2">@Html.ActionLink("", "ViewRecord", "Customer",  new { saleId = item.SaleId} , new {@class = "fa fa-eye fa-lg text-info" } )</span></td>
                                                </tr>
                                              }
                                          
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        
        
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/Theme/plugins/common/common.min.js"></script>
    <script src="~/Theme/js/custom.min.js"></script>
    <script src="~/Theme/js/settings.js"></script>
    <script src="~/Theme/js/gleek.js"></script>
    <script src="~/Theme/js/styleSwitcher.js"></script>

    @* <script src="~/Theme/plugins/tables/js/jquery.dataTables.min.js"></script>
    <script src="~/Theme/plugins/tables/js/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="~/Theme/plugins/tables/js/datatable-init/datatable-basic.min.js"></script> *@

</body>

</html>
